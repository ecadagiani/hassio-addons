{
  "name": "Rsync Folders",
  "version": "1.0.0",
  "slug": "rsyncfolders",
  "description": "Transfers data from specific folders to a remote rsync server. Using username/password",
  "url": "https://github.com/ecadagiani/hassio-addons/tree/main/rsync_folders",
  "startup": "once",
  "boot": "manual",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "map": [
    "share:rw",
    "config:rw",
    "backup:rw",
    "addons:rw",
    "media:rw"
  ],
  "schema": {
    "remote_host": "str",
    "remote_port": "port?",
    "remote_folder": "str",
    "username": "str",
    "password": "str",
    "folders": [
      "str"
    ],
    "options": "str?"
  },
  "options": {
    "remote_host": "",
    "remote_folder": "/home/user",
    "username": "user",
    "password": "password",
    "folders": [
      "/config"
    ]
  }
}